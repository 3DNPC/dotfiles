[user]
	name  = Sebastien Varrette
	email = Sebastien.Varrette@uni.lu
        signingkey = 0xDD01D5C0
[alias]
  	up = pull origin
	pu = push origin
  	st = status
  	df = diff
  	ci = commit
	br = branch
        # From http://progit.org/book/ch2-11.html
        unstage = reset HEAD --
        last = log -1 HEAD
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	autocrlf = input
